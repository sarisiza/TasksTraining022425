<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tasks_navigation">

    <fragment
        android:id="@+id/login"
        android:name="com.clp.tasks.ui.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_tasks"
            app:destination="@id/tasks" />
    </fragment>

    <fragment
        android:id="@+id/tasks"
        android:name="com.clp.tasks.ui.TasksFragment"
        android:label="tasks"
        tools:layout="@layout/fragment_tasks">

        <action
            android:id="@+id/action_tasks_to_login"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_tasks_to_add_task"
            app:destination="@id/add_task" />
    </fragment>

    <fragment
        android:id="@+id/add_task"
        android:name="com.clp.tasks.ui.AddTaskFragment"
        android:label="@string/add_task"
        tools:layout="@layout/fragment_add_task">

        <action
            android:id="@+id/action_add_task_to_tasks"
            app:destination="@id/tasks" />
    </fragment>

</navigation>